<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.talend.repository.view.route.viewer.content.RoutesContentProvider"
            id="org.talend.repository.view.route.routes"
            labelProvider="org.talend.repository.viewer.label.RepositoryViewLabelProvider"
            name="%NavigatorContent.routes" >
         <triggerPoints>
            <or>
               <adapt
                     type="org.talend.core.repository.model.ProjectRepositoryNode">
               </adapt>
               <instanceof
                     value="org.talend.core.repository.model.ProjectRepositoryNode">
               </instanceof>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRoutesTopNode">
                  </test>
               </and>
            </or>
         </triggerPoints>
         <possibleChildren>
            <and>
               <instanceof
                     value="org.talend.repository.model.RepositoryNode">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.talend.repository.node.route.isRoutesTopNode">
               </test>
            </and>
         </possibleChildren>
         <actionProvider
               class="org.talend.repository.viewer.action.RepoNodeActionProvider"
               id="org.talend.repository.routes.action.provider.id">
            <enablement>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRoutesTopNode">
                  </test>
                  <not>
                     <test
                           forcePluginActivation="true"
                           property="org.talend.repository.node.isDeleted">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
      </navigatorContent>

      <navigatorContent
            activeByDefault="true"
            contentProvider="org.talend.repository.view.route.viewer.content.RouteletContentProvider"
            id="org.talend.repository.view.route.routelet"
            labelProvider="org.talend.repository.viewer.label.RepositoryViewLabelProvider"
            name="Routelet" >
         <triggerPoints>
            <or>
               <adapt
                     type="org.talend.core.repository.model.ProjectRepositoryNode">
               </adapt>
               <instanceof
                     value="org.talend.core.repository.model.ProjectRepositoryNode">
               </instanceof>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRouteletNode">
                  </test>
               </and>
            </or>
         </triggerPoints>
         <possibleChildren>
            <and>
               <instanceof
                     value="org.talend.repository.model.RepositoryNode">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.talend.repository.node.route.isRouteletNode">
               </test>
            </and>
         </possibleChildren>
         <actionProvider
               class="org.talend.repository.viewer.action.RepoNodeActionProvider"
               id="org.talend.repository.routelet.action.provider.id">
            <enablement>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRouteletNode">
                  </test>
                  <not>
                     <test
                           forcePluginActivation="true"
                           property="org.talend.repository.node.isDeleted">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
      </navigatorContent>

      <navigatorContent
            activeByDefault="true"
            contentProvider="org.talend.repository.view.route.viewer.content.BeansContentProvider"
            id="org.talend.repository.view.route.beans"
            labelProvider="org.talend.repository.viewer.label.RepositoryViewLabelProvider"
            name="%NavigatorContent.beans" >
         <triggerPoints>
            <and>
               <instanceof
                     value="org.talend.repository.model.RepositoryNode">
               </instanceof>
               <or>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isBeans">
                  </test>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.isCodeTopNode">
                  </test>
               </or>
            </and>
         </triggerPoints>
         <possibleChildren>
            <and>
               <instanceof
                     value="org.talend.repository.model.RepositoryNode">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.talend.repository.node.route.isBeans">
               </test>
            </and>
         </possibleChildren>
         <actionProvider
               class="org.talend.repository.viewer.action.RepoNodeActionProvider"
               id="org.talend.repository.beans.action.provider.id">
            <enablement>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isBeans">
                  </test>
                  <not>
                     <test
                           forcePluginActivation="true"
                           property="org.talend.repository.node.isDeleted">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
      </navigatorContent>
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.talend.repository.view.route.viewer.content.RouteResourceContentProvider"
            id="org.talend.repository.view.route.route_resource"
            labelProvider="org.talend.repository.viewer.label.RepositoryViewLabelProvider"
            name="Route Resources" >
         <triggerPoints>
            <or>
               <adapt
                     type="org.talend.core.repository.model.ProjectRepositoryNode">
               </adapt>
               <instanceof
                     value="org.talend.core.repository.model.ProjectRepositoryNode">
               </instanceof>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRouteResourceNode">
                  </test>
               </and>
            </or>
         </triggerPoints>
         <possibleChildren>
            <and>
               <instanceof
                     value="org.talend.repository.model.RepositoryNode">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.talend.repository.node.route.isRouteResourceNode">
               </test>
            </and>
         </possibleChildren>
         <actionProvider
               class="org.talend.repository.viewer.action.RepoNodeActionProvider"
               id="org.talend.repository.route.resources.action.provider.id">
            <enablement>
               <and>
                  <instanceof
                        value="org.talend.repository.model.RepositoryNode">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.talend.repository.node.route.isRouteResourceNode">
                  </test>
                  <not>
                     <test
                           forcePluginActivation="true"
                           property="org.talend.repository.node.isDeleted">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
      </navigatorContent>
   </extension>

   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.talend.repository.view.route.viewer.tester.RouteNodeTester"
            id="org.talend.repository.node.route.tester"
            namespace="org.talend.repository.node.route"
            properties="isRoutesTopNode,isBeans,isRouteResourceNode,isRouteletNode"
            type="org.talend.repository.model.RepositoryNode">
      </propertyTester>
   </extension>

    <extension point="org.talend.core.repository.repository_content">
        <RepositoryContent class="org.talend.repository.view.route.viewer.content.CamelRepositoryContentHandler" />
    </extension>

   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.talend.repository.cnf.view">
         <includes>
            <contentExtension
                  pattern="org.talend.repository.view.route.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>

   <extension
         point="org.talend.repository.viewer.perspective.filter">
      <perspectiveFilter
            actionProviderId="org.talend.repository.viewer.actionbar.menu.perspectiveFilter"
            perspectiveId="org.talend.camel.perspective">
         <includes>
            <contentExtension
                  pattern="org.talend.repository.view.route.*">
            </contentExtension>
            <contentExtension
                  pattern="org.talend.repository.viewer.root.contexts">
            </contentExtension>
            <contentExtension
                  pattern="org.talend.repository.viewer.root.code">
            </contentExtension>
            <contentExtension
                  pattern="org.talend.repository.viewer.root.recycleBin.*">
            </contentExtension>
            <contentExtension
                  pattern="org.talend.repository.viewer.root.content.refproject.content">
            </contentExtension>
            <contentExtension
                  pattern="org.talend.repository.view.sorter.*">
            </contentExtension>
         </includes>
      </perspectiveFilter>
      <perspectiveFilter
            actionProviderId="org.talend.repository.viewer.actionbar.menu.perspectiveFilter"
            perspectiveId="org.talend.rcp.perspective">
         <excludes>
            <contentExtension
                  pattern="org.talend.repository.view.route.*">
            </contentExtension>
         </excludes>
      </perspectiveFilter>
   </extension>
   <extension
         point="org.talend.core.repository.repository_node_provider">
      <extraProducts
            products="CAMEL"
            type="CODE">
      </extraProducts>
      <extraProducts
            products="CAMEL"
            type="CONTEXT">
      </extraProducts>
   </extension>

    <extension point="org.talend.core.repositoryContextualsActions">
        <Action
            class="org.talend.repository.view.actions.CreateRouteletProcess"
            id="org.talend.repository.view.actions.CreateRouteletProcess"
            level="10" />
    </extension>

</plugin>
